{
  "name": "torc",
  "version": "3.1.0",
  "description": "tools for working with asynchronous and reactive computations",
  "main": "./dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig-esm.json",
    "docs": "typedoc",
    "clean": "rimraf dist && rimraf docs",
    "format": "prettierx --config ./.prettierrc --write ./**/*.ts",
    "lint": "eslint . --ext .ts --fix",
    "test": "tap --ts --no-coverage **/*.test.ts",
    "coverage": "tap --ts **/*.test.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build"
  },
  "author": "gatlin@niltag.net",
  "license": "GPL-3",
  "devDependencies": {
    "@types/tap": "^15.0.7",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettierx": "^0.18.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "npm-run-all": "^4.1.5",
    "prettierx": "^0.18.3",
    "rimraf": "^3.0.2",
    "tap": "^16.2.0",
    "ts-functional-pipe": "^3.1.2",
    "ts-node": "^9.1.1",
    "typedoc": "^0.22.14",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@types/node": "^17.0.33"
  }
}
